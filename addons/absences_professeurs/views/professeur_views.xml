<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_professeur_master_tree" model="ir.ui.view">
        <field name="name">absence.professeur.master.tree</field>
        <field name="model">absence.professeur.master</field>
        <field name="arch" type="xml">
            <tree string="Liste des Professeurs" editable="bottom">
                <field name="name"/>
                <field name="matiere"/>
                <field name="absence_count" decoration-danger="absence_count &gt; 5" decoration-warning="absence_count &gt; 2" decoration-info="absence_count &gt; 0" string="Total Absences"/>
            </tree>
        </field>
    </record>

    <record id="action_professeur_master" model="ir.actions.act_window">
        <field name="name">Liste des Professeurs</field>
        <field name="res_model">absence.professeur.master</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
